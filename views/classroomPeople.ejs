<%- include('partials/_header.ejs') %>
<script>
    const urlArray = window.location.pathname.split('/');
    const userType = urlArray[2];
    const userId = urlArray[3];
    const classId = urlArray[4];
</script>
<%- include('partials/_navBar.ejs') %>
<link rel="stylesheet" href="/css/classRoomPeopleCSS.css">
<div <% if(instruct){ %>id="nonFocusSearch"
        <% } %>
     style="transition: visibility 0.8s, opacity 0.8s linear;">
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary pt-0 pb-0">
        <ul class="nav navbar-nav mr-auto ml-auto mt-0 mb-0">
            <li class="nav-item">
                <button class="btn btn-secondary h-2" style="height: 50px; width: 200px; border-radius: 0;"
                        onclick="location.href='<%= `/classroom/${idType}/${userId}/${classId}/work` %>'">Work
                </button>
            </li>
            <li class="nav-item">
                <button class="btn btn-dark h-2" style="height: 50px; width: 200px; border-radius: 0;"
                        onclick="location.href='<%= `/classroom/${idType}/${userId}/${classId}/people` %>'">People
                </button>
            </li>
        </ul>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="box">
                        <h1>People</h1>
                        <h4 class="text-muted">Click To See People</h4>
                        <button class="btn btn-outline-light text-left mb-2"
                                style="width:100%;height: 50px; font-size: 25px;" data-target="#teachersTable"
                                data-toggle="collapse" aria-expanded="false" aria-controls="teachersTable">Teachers
                        </button>
                        <div class="collapse" id="teachersTable">
                            <table class="table table-striped table-hover table-dark">
                                <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <% if(adminNav){ %>
                                        <th scope="col">Action</th>
                                    <% } %>
                                </tr>
                                </thead>
                                <tbody id="teachersShowTable">
                                </tbody>
                            </table>
                        </div>
                        <button class="btn btn-outline-light text-left mb-2 mt-3"
                                style="width:100%;height: 50px; font-size: 25px;" data-target="#studentsTable"
                                data-toggle="collapse" aria-expanded="false" aria-controls="studentsTable">Students
                        </button>
                        <div class="collapse" id="studentsTable">
                            <table class="table table-striped table-hover table-dark">
                                <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <% if(instruct){ %>
                                        <th scope="col">Action</th>
                                    <% } %>
                                </tr>
                                </thead>
                                <tbody id="studentsShowTable">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% if(instruct){ %>
    <%- include('partials/_blurredSearch.html') %>
<% } %>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/classPeopleOperations.js"></script>
<script src='/js/clientSessions.js'></script>
<%- include('partials/_footer.ejs') %>
