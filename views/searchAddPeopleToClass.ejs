<%- include('partials/_header.ejs') %>
<script>
  const urlArray = window.location.pathname.split('/');
  const userType = urlArray[2];
  const userId = urlArray[3];
  const classId = urlArray[4];
</script>
<link rel="stylesheet" href="/css/searchAddPeopleToClass.css">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <ul class="navbar-nav mr-auto">
    <li class="nav-item">
      <a class="nav-link" href="/classroom/<%= userType  %>/<%= userId  %>/<%= classId  %>/people"><i class="fa fa-arrow-left" style="font-size: 40px; cursor: pointer;"></i><span style="font-size: 30px; cursor: pointer;">   Go Back</span></a>
    </li>
  </ul>
  <form class="form-inline my-2 my-lg-0 ml-5">
      <input class="form-control mr-sm-2" style="min-width: 1000px;" type="search"
             placeholder="Search for accounts to add in the class" aria-label="Search"
             id="searchPeopleNavBar" onInput="emitSearch()">
      <input type="button" value="Add To Class" class="btn btn-outline-success" onclick="addPeople()">
  </form>
</nav>
<div class="container-fluid mt-5 pt-2">
  <div class="row">
    <div class="col-md-6">
      <div class="card text-center text-white bg-dark pt-2">
        <h2 class="card-title">Teachers Searched</h2>
      </div>
      <div class="row">
        <div class="col-md-12" id="teacherShowSearch">

        </div>
      </div>
    </div>
    <div class="col-md-6" >
      <div class="card text-center text-white bg-dark pt-2">
        <h2 class="card-title">Students Searched</h2>
      </div>
      <div class="row">
        <div class="col-md-12" id="studentShowSearch">

        </div>
      </div>
    </div>
  </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/searchAddPeopleToClass.js"></script>
<script src='/js/clientSessions.js'></script>
